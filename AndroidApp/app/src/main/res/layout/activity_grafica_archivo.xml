<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graficaArchivo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".GraficaArchivo">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/GraficaFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/fondoecghorizontal"/>

    <TextView
        android:id="@+id/bpmTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:textSize="15dp"
        android:text="BPM"
        android:paddingTop="40dp"
        android:paddingRight="20dp"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <ProgressBar
        android:id="@+id/bpm"
        style="?android:attr/progressBarStyle"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:max="100"
        android:min="60"
        android:progress="0"/>

    <TextView
        android:id="@+id/datoFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grafica"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/velocidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="25 mm/s"
        android:textSize="15dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/voltaje"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="10 mm/mV"
        android:textSize="15dp"
        android:paddingBottom="150sp"
        android:gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"/>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/delate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        app:icon="@drawable/ic_delete_black_24dp"
        app:iconSize="25dp"
        app:iconTint="@color/cardview_light_background" />4

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/regresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="15dp"
        android:textAlignment="center"
        android:textColor="@color/cardview_light_background"
        app:icon="@android:drawable/ic_menu_revert"
        app:iconSize="25dp"
        app:iconTint="@color/cardview_light_background" />4

</RelativeLayout>